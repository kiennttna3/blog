<div class="container">
    <div class="mt-4">
        <div class="row">
            <div class="col-12">
                <div class="row">
                    {{#each courses}}
                        <div class="card col-3 pr-3 mb-4 head_item">
                            <div class="head_item">
                                <a href="/courses/{{ this.slug }}">
                                    <img src="{{ this.image }}" class="card-img-top" alt="{{ this.name }}">
                                </a>
                                <div class="card-body">
                                    <a class="text-decoration-none" href="/courses/{{ this.slug }}">
                                        <h5 class="card-title">
                                            {{ this.name }}
                                        </h5>
                                    </a>
                                    <p class="card-text">
                                        {{ this.description }}
                                    </p>
                                    <div class="last_item">
                                        <a href="#" class="btn btn-outline-primary">
                                            Đăng ký khóa học
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>